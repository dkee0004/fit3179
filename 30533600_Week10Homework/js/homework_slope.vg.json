{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "https://raw.githubusercontent.com/dkee0004/fit3179/main/30533600_Week10Homework/data/waterPollutionCleaned3.csv"},
  "title": "Slope graph - median of mean pH values in certain countries in Europe from 2008 to 2009",
  "width": "container",
  "layer": [
    {
      "params": [
        {
          "name": "country_highlight",
          "select": {"type": "point", "fields": ["Country"]},
          "bind": "legend"
        }
      ],
      "mark": {"type": "line", "tooltip": true},
      "encoding": {
        "x": {
          "field": "phenomenonTimeReferenceYear",
          "type": "ordinal",
          "scale": {"padding": 1.0}
        },
        "y": {
          "aggregate": "median",
          "field": "resultMeanValue",
          "type": "quantitative",
          "scale": {"domain": [6, 8.5]}
        },
        "color": {"field": "Country", "type": "nominal"},
        "opacity": {
          "condition": {"param": "country_highlight", "value": 0.6},
          "value": 0
        }
      }
    }
  ]

}
